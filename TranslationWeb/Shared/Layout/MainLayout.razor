@inherits LayoutComponentBase
@using TranslationWeb.Features.Auth.Components
@using Microsoft.AspNetCore.Components.Routing
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
<div class="page">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container">
                <NavLink class="navbar-brand" href="/">
                    <i class="bi bi-translate me-2"></i> AI Translation
                </NavLink>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <NavLink class="nav-link rounded-pill px-3" href="/" Match="NavLinkMatch.All">
                                <i class="bi bi-house-door me-1"></i> Trang chủ
                            </NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link rounded-pill px-3" href="/translation">
                                <i class="bi bi-translate me-1"></i> Dịch thuật
                            </NavLink>
                        </li>
                        <AuthorizeView>
                            <Authorized>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle rounded-pill px-3" href="#" id="chatDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-chat-dots me-1"></i> Chat
                                    </a>
                                    <ul class="dropdown-menu rounded-4 shadow-sm border-0" aria-labelledby="chatDropdown">
                                        <li>
                                            <NavLink class="dropdown-item rounded-3 px-3" href="/chat">
                                                <i class="bi bi-chat me-1"></i> Chat với AI
                                            </NavLink>
                                        </li>
                                        <li>
                                            <NavLink class="dropdown-item rounded-3 px-3" href="/sessions">
                                                <i class="bi bi-clock-history me-1"></i> Lịch sử phiên chat
                                            </NavLink>
                                        </li>
                                    </ul>
                                </li>
                            </Authorized>
                        </AuthorizeView>
                        <li class="nav-item">
                            <NavLink class="nav-link rounded-pill px-3" href="/feedback">
                                <i class="bi bi-chat-left-text me-1"></i> Phản hồi
                            </NavLink>
                        </li>
                        
                        <AuthorizeView Roles="Admin">
                            <Authorized>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle rounded-pill px-3" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-gear me-1"></i> Quản trị
                                    </a>
                                    <ul class="dropdown-menu rounded-4 shadow-sm border-0" aria-labelledby="adminDropdown">
                                        <li>
                                            <NavLink class="dropdown-item rounded-3 px-3" href="/admin/ai-models">
                                                <i class="bi bi-cpu me-1"></i> Quản lý Model AI
                                            </NavLink>
                                        </li>
                                        <li>
                                            <NavLink class="dropdown-item rounded-3 px-3" href="/admin/users">
                                                <i class="bi bi-people me-1"></i> Quản lý người dùng
                                            </NavLink>
                                        </li>
                                        <li>
                                            <NavLink class="dropdown-item rounded-3 px-3" href="/stats">
                                                <i class="bi bi-bar-chart me-1"></i> Thống kê
                                            </NavLink>
                                        </li>
                                    </ul>
                                </li>
                            </Authorized>
                        </AuthorizeView>
                    </ul>
                    <div class="d-flex">
                        <UserProfileDisplay />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3 pt-3">
            @Body
        </main>
    </div>

    <footer class="border-top footer bg-light text-secondary mt-auto">
        <div class="container">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center py-3">
                <div class="mb-2 mb-md-0">
                    &copy; @DateTime.Now.Year - AI Translation
                </div>
                <div>
                    <a href="/privacy" class="text-secondary me-3"><i class="bi bi-shield-check me-1"></i>Chính sách bảo mật</a>
                    <a href="/terms" class="text-secondary me-3"><i class="bi bi-file-text me-1"></i>Điều khoản sử dụng</a>
                    <a href="/contact" class="text-secondary"><i class="bi bi-envelope me-1"></i>Liên hệ</a>
                </div>
            </div>
        </div>
    </footer>
</div>

@code {
    // Removed JavaScript interop code
    // Bootstrap functionality is now handled by native Blazor components
}