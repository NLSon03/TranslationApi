                                    </ul>
                                </li>
                            </Authorized>
                        </AuthorizeView>
                    </ul>
                    <div class="d-flex">
                        <UserProfileDisplay />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container py-4">
        <main role="main" class="bg-white rounded-4 shadow-sm">
            <div class="p-4 main-content">
                <div class="ai-particles"></div>
                @Body
            </div>
